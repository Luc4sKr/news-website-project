@model NewsWebsiteProject.Domain.DTO.NewsDTO

@{
    ViewData["Title"] = "Create";
}

<div class="form-container">

    <div class="form-content">
        <h1 class="form-title">Register new News</h1>
        <form asp-controller="News" asp-action="Create" class="form" method="post">
            <div class="form-group-container">
                <div class="form-group-input">
                    <label asp-for="title" class="control-label"></label>
                    <input asp-for="title" type="text" placeholder="Enter a title..." class="news-title-input">
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>
                <div class="form-group-input">
                    <label asp-for="description" class="control-label"></label>
                    <textarea asp-for="description" type="text" placeholder="Enter a description..." class="news-description-textarea"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group-input">
                    <label asp-for="contents" class="control-label"></label>
                    <textarea asp-for="contents"></textarea>
                    <span asp-validation-for="contents" class="text-danger"></span>
                </div>
                <div class="form-group-input">
                    <label asp-for="categoryId" class="control-label">Category</label>
                    <select asp-for="categoryId" asp-items="ViewBag.categoryId"></select>
                </div>
                <div class="form-button-group">
                    <input type="submit" value="Register" class="btn btn-dark" />
                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}